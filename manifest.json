{
  "manifest_version": 3,
  "name": "Canvas Course Scraper",
  "version": "1.0",
  "description": "Scrape full Canvas course content and download as a ZIP.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://canvas.northwestern.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
