{
    "manifest_version": 3,
    "name": "My Extension",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "version": "1.0.0",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "scripting",
        "storage",
        "identity",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}
